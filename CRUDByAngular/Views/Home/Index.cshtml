
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div ng-app="myApp" class="row">
        <h1>Employee</h1>
        <div ng-controller="myCtrl" ng-init="GetAllEmployee()">
            <div class="col-sm-6">
                <table class="table table-bordered table-hover">
                    <tr>
                        <td>
                            <b>ID</b>
                        </td>
                        <td>
                            <b>Name</b>
                        </td>
                        <td>
                            <b>Phone</b>
                        </td>
                        <td>
                            <b>Address</b>
                        </td>
                        <td>
                            <b>Actions</b>
                        </td>
                    </tr>
                    <tr ng-repeat="Emp in employees">
                        <td>
                            {{Emp.Id}}
                        </td>
                        <td>
                            {{Emp.Name}}
                        </td>
                        <td>
                            {{Emp.PhoneNo}}
                        </td>
                        <td>
                            {{Emp.Address}}
                        </td>
                        <td>
                            <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateEmp(Emp)" />
                            <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteEmp(Emp)" />
                        </td>
                    </tr>
                </table>
            </div>
            <div style="float: right" class="col-sm-6">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="control-label col-sm-2" for="name">Name:</label>
                        <div class="col-sm-10">
                            <input ng-model="data.name" type="text" class="form-control" id="name" placeholder="Enter name" name="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-sm-2" for="phoneNo">Phone No:</label>
                        <div class="col-sm-10">
                            <input ng-model="data.phoneNo" type="text" class="form-control" id="phoneNo" placeholder="Enter phone no" name="phoneNo">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-sm-2" for="address">Address:</label>
                        <div class="col-sm-10">
                            <input ng-model="data.address" type="text" class="form-control" id="address" placeholder="Enter address" name="address">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            @*<button ng-click="save(data)" type="submit" id="btnSave" class="btn btn-default">Submit</button>*@
                            <input ng-click="save(data)" type="button" id="btnSave" value="Save" class="btn btn-default"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/JS/angular.js"></script>
<script src="~/Scripts/JS/module.js"></script>
<script src="~/Scripts/JS/controller.js"></script>